
<mujoco model="quadrotorplus">
    <compiler angle="degree" inertiafromgeom="true" coordinate="local"/>
    <option	timestep="0.01" gravity="0 0 -9.81" density="1" viscosity="1e-5" integrator="RK4"/>

    <default>
        <joint armature="1" damping="1" limited="true"/>
        <geom conaffinity="0" condim="3" density="5.0" friction="1 0.5 0.5" margin="0.01" rgba="0.8 0.6 0.4 1"/>
    </default>

    <asset>
        <texture builtin="gradient" type="skybox" height="100" width="100" rgb1="1 1 1" rgb2="0 0 0"/>
        <texture name="texgeom" builtin="flat" height="1278" mark="cross" markrgb="1 1 1" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
        <texture name="texplane" builtin="checker" height="100" width="100" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d"/>
        <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texplane"/>
        <material name="geom" texture="texgeom" texuniform="true"/>
    </asset>

    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
        <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.4 0.3 0.3 1" size="5 5 0.2" type="plane"/>

        <!-- ========================= -->
        <!-- ObstÃ¡culos (solo visuales) -->
        <!-- ========================= -->
        <!-- Esfera -->
        <geom name="obs_sphere_0" type="sphere" pos="1.0 0.0 1.0" size="0.25"
            rgba="0.2 0.2 0.9 0.7" contype="0" conaffinity="0"/>

        <!-- Caja derecha -->
        <geom name="obs_box_0" type="box" pos="1.6 0.4 1.0" size="0.20 0.20 0.40"
            rgba="0.9 0.5 0.1 0.7" contype="0" conaffinity="0"/>

        <!-- Caja izquierda -->
        <geom name="obs_box_1" type="box" pos="1.6 -0.4 1.0" size="0.20 0.20 0.40"
            rgba="0.9 0.5 0.1 0.7" contype="0" conaffinity="0"/>

        <!-- FIRST QUADROTOR -->
        <body name="core_1" pos="-1.5 0 0.2">
            <geom name="core_geom_1" type="box" pos="0 0 0" quat="1 0 0 0" size=".04 .04 .02" rgba=".8 .2 0 1" mass=".1"/>
            <joint name="root_1" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
            
            <!-- Site en el centro del cuerpo para aplicar wrench (u1,u2,u3,u4) -->
            <site name="com_site_1" pos="0 0 0" size="0.006" rgba="1 0 0 1"/>

            <!-- brazos y motores -->
            <geom name="arm_front_1" type="box" pos=" 0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_back_1" type="box" pos="-0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_left_1" type="box" pos="0  0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_right_1" type="box" pos="0 -0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>

            <body name="prop0_1" pos=" 0.16  0.00 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor0_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop1_1" pos="-0.16  0.00 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor1_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop2_1" pos=" 0.00  0.16 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor2_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop3_1" pos=" 0.00 -0.16 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor3_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>

            <site name="x_axis_1" type="box" pos="0.20 0 0" size="0.20 0.003 0.003" rgba="1 0 0 0.3"/>
            <site name="y_axis_1" type="box" pos="0 0.20 0" size="0.003 0.20 0.003" rgba="0 1 0 0.3"/>
            <site name="z_axis_1" type="box" pos="0 0 0.20" size="0.003 0.003 0.20" rgba="0 0 1 0.3"/>

            <site name="attach_left" pos="0 0 -0.03"/>
        </body>
        
        <!-- SECOND QUADROTOR -->
        <body name="core_2" pos="-0.3 0 0.2">
            <geom name="core_geom_2" type="box" pos="0 0 0" quat="1 0 0 0" size=".04 .04 .02" rgba="0 0.2 0.8 1" mass=".1"/>
            <joint name="root_2" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
            
            <!-- Site en el centro del cuerpo para aplicar wrench (u1,u2,u3,u4) -->
            <site name="com_site_2" pos="0 0 0" size="0.006" rgba="1 0 0 1"/>
            
            <!-- brazos y motores -->
            <geom name="arm_front_2" type="box" pos=" 0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_back_2" type="box" pos="-0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_left_2" type="box" pos="0  0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
            <geom name="arm_right_2" type="box" pos="0 -0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>

            <body name="prop0_2" pos=" 0.16  0.00 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor0_2" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop1_2" pos="-0.16  0.00 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor1_2" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop2_2" pos=" 0.00  0.16 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor2_2" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>
            <body name="prop3_2" pos=" 0.00 -0.16 0.03">
                <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
                <site name="motor3_2" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
            </body>

            <site name="x_axis_2" type="box" pos="0.20 0 0" size="0.20 0.003 0.003" rgba="1 0 0 0.3"/>
            <site name="y_axis_2" type="box" pos="0 0.20 0" size="0.003 0.20 0.003" rgba="0 1 0 0.3"/>
            <site name="z_axis_2" type="box" pos="0 0 0.20" size="0.003 0.003 0.20" rgba="0 0 1 0.3"/>

            <site name="attach_right" pos="0 0 -0.03"/>
        </body>
        <!-- ðŸ”— Barra flexible con 6 segmentos articulados -->
        <body name="bar_seg1" pos="-1.500 0 0.1">
            <joint name="bar_free" type="free" damping="0.050" stiffness="0.100"/>
            <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.9 0.3 1" mass="0.017"/>
            <site name="bar_left" pos="0 0 0"/>
            <body name="bar_seg2" pos="0.200 0 0">
                <joint type="hinge" axis="0 1 1" range="-180 180" damping="0.0005" stiffness="0.1" armature="0" limited="false"/>
                <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.70 0.50 1" mass="0.017"/>
            <body name="bar_seg3" pos="0.200 0 0">
                <joint type="hinge" axis="0 1 1" range="-180 180" damping="0.0005" stiffness="0.1" armature="0" limited="false"/>
                <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.60 0.60 1" mass="0.017"/>
            <body name="bar_seg4" pos="0.200 0 0">
                <joint type="hinge" axis="0 1 1" range="-180 180" damping="0.0005" stiffness="0.1" armature="0" limited="false"/>
                <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.50 0.70 1" mass="0.017"/>
            <body name="bar_seg5" pos="0.200 0 0">
                <joint type="hinge" axis="0 1 1" range="-180 180" damping="0.0005" stiffness="0.1" armature="0" limited="false"/>
                <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.40 0.80 1" mass="0.017"/>
            <body name="bar_seg6" pos="0.200 0 0">
                <joint type="hinge" axis="0 1 1" range="-180 180" damping="0.0005" stiffness="0.1" armature="0" limited="false"/>
                <geom type="capsule" fromto="0 0 0 0.200 0 0" size="0.005" rgba="0.3 0.30 0.90 1" mass="0.017"/>
                <site name="bar_right" pos="0.200 0 0"/>
            </body>
            </body>
            </body>
            </body>
            </body>
        </body>

        <!-- Flecha visual 1 (mocap) para mostrar F_des1 -->
        <body name="force_arrow_1" mocap="true" pos="0 0 0">
        <geom name="force_geom_1"
                type="capsule"
                size="0.01 0.10"
                rgba="1 0 0 1"
                contype="0"
                conaffinity="0"
                mass="0"/>
        </body>

        <!-- Flecha visual 2 (mocap) para mostrar F_des2 -->
        <body name="force_arrow_2" mocap="true" pos="0 0 0">
        <geom name="force_geom_2"
                type="capsule"
                size="0.01 0.10"
                rgba="1 0 0 1"
                contype="0"
                conaffinity="0"
                mass="0"/>
        </body>
    </worldbody>

    <!-- ðŸŒˆ Tendones elÃ¡sticos que unen drones y barra -->
    <tendon>
        <spatial name="tendon_left"
                 limited="true" range="0.01 0.03"
                 springlength="0.1" stiffness="20" damping="3"
                 rgba="0.2 1 0.2 0.5" width="0.005">
            <site site="attach_left"/>
            <site site="bar_left"/>
        </spatial>

        <spatial name="tendon_right"
                 limited="true" range="0.01 0.03"
                 springlength="0.25" stiffness="20" damping="3"
                 rgba="0.2 1 0.2 0.5" width="0.005">
            <site site="attach_right"/>
            <site site="bar_right"/>
        </spatial>
    </tendon>

    <actuator>
        <!-- ========================= -->
        <!-- DRON 1: u1,u2,u3,u4 -->
        <!-- ========================= -->
        <general name="u1_thrust_1" site="com_site_1"
              ctrllimited="true" ctrlrange="0 10"
              gear="0 0 1  0 0 0"/>

        <general name="u2_tau_x_1" site="com_site_1"
                ctrllimited="true" ctrlrange="-1 1"
                gear="0 0 0  1 0 0"/>

        <general name="u3_tau_y_1" site="com_site_1"
                ctrllimited="true" ctrlrange="-1 1"
                gear="0 0 0  0 1 0"/>

        <general name="u4_tau_z_1" site="com_site_1"
                ctrllimited="true" ctrlrange="-0.2 0.2"
                gear="0 0 0  0 0 1"/>


        <!-- ========================= -->
        <!-- DRON 2: u1,u2,u3,u4 -->
        <!-- ========================= -->
        <general name="u1_thrust_2" site="com_site_2"
                ctrllimited="true" ctrlrange="0 10"
                gear="0 0 1  0 0 0"/>

        <general name="u2_tau_x_2" site="com_site_2"
                ctrllimited="true" ctrlrange="-1 1"
                gear="0 0 0  1 0 0"/>

        <general name="u3_tau_y_2" site="com_site_2"
                ctrllimited="true" ctrlrange="-1 1"
                gear="0 0 0  0 1 0"/>

        <general name="u4_tau_z_2" site="com_site_2"
                ctrllimited="true" ctrlrange="-0.2 0.2"
                gear="0 0 0  0 0 1"/>
    </actuator>


    <sensor>
        <!-- Primer dron -->
        <framepos  name="pos_core_1"  objtype="body" objname="core_1"/>
        <framequat name="quat_core_1" objtype="body" objname="core_1"/>

        <!-- Segundo dron -->
        <framepos  name="pos_core_2"  objtype="body" objname="core_2"/>
        <framequat name="quat_core_2" objtype="body" objname="core_2"/>
    </sensor>

</mujoco>
