      <geom name="arm_right_3" type="box" pos="0 -0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>

      <body name="arm_front_3" pos=" 0.16  0.00 0.03">
        <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
        <site name="motor0_3" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
