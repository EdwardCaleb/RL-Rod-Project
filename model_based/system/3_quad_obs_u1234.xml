<mujoco model="drone_3d_free_obs">
  <compiler angle="degree" inertiafromgeom="true" coordinate="local"/>
  <option timestep="0.01" gravity="0 0 -9.81" density="1" viscosity="1e-5" integrator="RK4"/>

  <default>
    <joint damping="0.02" stiffness="0.001" limited="false"/>
    <geom condim="3" density="200" friction="1 0.5 0.5" margin="0.01" rgba="0.8 0.6 0.4 1"/>
  </default>

  <asset>
    <texture builtin="gradient" type="skybox" height="100" width="100" rgb1="1 1 1" rgb2="0.6 0.8 1"/>
    <texture name="texplane" builtin="checker" height="100" width="100" rgb1="0.7 0.7 0.7" rgb2="0.9 0.9 0.9" type="2d"/>
    <material name="MatPlane" reflectance="0.3" shininess="1" specular="0.5" texrepeat="5 5" texture="texplane"/>
    <material name="MatDrone" specular="0.5" shininess="1" rgba="0.8 0.2 0.2 1"/>
  </asset>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1"
           pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom material="MatPlane" name="floor" pos="0 0 0" rgba="0.4 0.3 0.3 1" size="5 5 0.2" type="plane"/>

    <!-- ========================= -->
    <!-- ObstÃ¡culos (solo visuales) -->
    <!-- ========================= -->
    <!-- Esfera -->
    <geom name="obs_sphere_0" type="sphere" pos="1.0 0.0 1.0" size="0.25"
          rgba="0.2 0.2 0.9 0.7" contype="0" conaffinity="0"/>

    <!-- Caja derecha -->
    <geom name="obs_box_0" type="box" pos="1.6 0.4 1.0" size="0.20 0.20 0.40"
          rgba="0.9 0.5 0.1 0.7" contype="0" conaffinity="0"/>

    <!-- Caja izquierda -->
    <geom name="obs_box_1" type="box" pos="1.6 -0.4 1.0" size="0.20 0.20 0.40"
          rgba="0.9 0.5 0.1 0.7" contype="0" conaffinity="0"/>

    <!-- FIRST QUADROTOR ðŸš -->
    <body name="core_1" pos="0.0 -0.5 1.0">
        <geom name="core_geom_1" type="box" pos="0 0 0" quat="1 0 0 0" size=".04 .04 .02" rgba=".8 .2 0 1" mass="0.30"/>
        <joint name="root_1" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
        
        <!-- Site en el centro del cuerpo para aplicar wrench (u1,u2,u3,u4) -->
        <site name="com_site_1" pos="0 0 0" size="0.006" rgba="1 0 0 1"/>

        <!-- brazos y motores -->
        <geom name="arm_front_1" type="box" pos=" 0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_back_1" type="box" pos="-0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_left_1" type="box" pos="0  0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_right_1" type="box" pos="0 -0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>

        <body name="prop0_1" pos=" 0.16  0.00 0.03">
          <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
          <site name="motor0_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
        </body>
        <body name="prop1_1" pos="-0.16  0.00 0.03">
          <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
          <site name="motor1_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
        </body>
        <body name="prop2_1" pos=" 0.00  0.16 0.03">
          <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
          <site name="motor2_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
