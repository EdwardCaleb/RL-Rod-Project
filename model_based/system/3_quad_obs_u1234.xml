        <geom name="arm_front_2" type="box" pos=" 0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_back_2" type="box" pos="-0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_left_2" type="box" pos="0  0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
        <geom name="arm_right_2" type="box" pos="0 -0.10 0" size="0.01 0.06 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>

        <body name="arm_front_2" pos=" 0.16  0.00 0.03">
          <geom type="cylinder" size="0.03 0.003" rgba="0.3 1 0.3 0.6"/>
          <site name="motor0_2" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
        </body>
        <body name="arm_back_2" pos="-0.16  0.00 0.03">
