      <site name="z_axis_3" type="box" pos="0 0 0.20" size="0.003 0.003 0.20" rgba="0 0 1 0.3"/>
    </body>

    <!-- Flecha visual 1 (mocap) para mostrar F_des1 -->
    <body name="force_arrow_1" mocap="true" pos="0 0 0">
      <geom name="force_geom_1"
            type="capsule"
            size="0.01 0.10"
            rgba="1 0 0 1"
            contype="0"
            conaffinity="0"
            mass="0"/>
    </body>

    <!-- Flecha visual 2 (mocap) para mostrar F_des2 -->
    <body name="force_arrow_2" mocap="true" pos="0 0 0">
      <geom name="force_geom_2"
            type="capsule"
            size="0.01 0.10"
            rgba="1 0 0 1"
            contype="0"
            conaffinity="0"
            mass="0"/>
