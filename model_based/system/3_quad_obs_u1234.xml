        <site name="z_axis_2" type="box" pos="0 0 0.20" size="0.003 0.003 0.20" rgba="0 0 1 0.3"/>
      </body>

    <!-- THIRD QUADROTOR ðŸš -->
    <body name="core_3" pos="0.0 0.5 1.0">
      <geom name="core_geom_3" type="box" pos="0 0 0" quat="1 0 0 0" size=".04 .04 .02" rgba="0 0.8 0.2 1" mass="0.30"/>
      <joint name="root_3" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
      
      <!-- Site en el centro del cuerpo para aplicar wrench (u1,u2,u3,u4) -->
      <site name="com_site_3" pos="0 0 0" size="0.006" rgba="1 0 0 1"/>
      
      <geom name="arm_front_3" type="box" pos=" 0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
      <geom name="arm_back_3" type="box" pos="-0.10 0 0" size="0.06 0.01 0.01" rgba="0.8 0.8 0.8 1" mass="0.02"/>
