  <actuator>
      <!-- ========================= -->
      <!-- DRON 1: u1,u2,u3,u4 -->
      <!-- ========================= -->
      <general name="u1_thrust_1" site="com_site_1"
              ctrllimited="true" ctrlrange="0 10"
              gear="0 0 1  0 0 0"/>

      <general name="u2_tau_x_1" site="com_site_1"
              ctrllimited="true" ctrlrange="-1 1"
              gear="0 0 0  1 0 0"/>

      <general name="u3_tau_y_1" site="com_site_1"
              ctrllimited="true" ctrlrange="-1 1"
              gear="0 0 0  0 1 0"/>

      <general name="u4_tau_z_1" site="com_site_1"
              ctrllimited="true" ctrlrange="-0.2 0.2"
              gear="0 0 0  0 0 1"/>


      <!-- ========================= -->
      <!-- DRON 2: u1,u2,u3,u4 -->
      <!-- ========================= -->
      <general name="u1_thrust_2" site="com_site_2"
              ctrllimited="true" ctrlrange="0 10"
              gear="0 0 1  0 0 0"/>

      <general name="u2_tau_x_2" site="com_site_2"
              ctrllimited="true" ctrlrange="-1 1"
