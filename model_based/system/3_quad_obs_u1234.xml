          <site name="motor3_1" pos="0 0 0.003" size="0.008" rgba="0 1 0 0.7" type="cylinder"/>
        </body>

        <site name="x_axis_1" type="box" pos="0.20 0 0" size="0.20 0.003 0.003" rgba="1 0 0 0.3"/>
        <site name="y_axis_1" type="box" pos="0 0.20 0" size="0.003 0.20 0.003" rgba="0 1 0 0.3"/>
        <site name="z_axis_1" type="box" pos="0 0 0.20" size="0.003 0.003 0.20" rgba="0 0 1 0.3"/>

          <site name="attach_left" pos="0 0 -0.03"/>
      </body>

    <!-- SECOND QUADROTOR ðŸš -->
    <body name="core_2" pos="0.0 0.0 1.0">
        <geom name="core_geom_2" type="box" pos="0 0 0" quat="1 0 0 0" size=".04 .04 .02" rgba="0 0.2 0.8 1" mass="0.30"/>
        <joint name="root_2" type="free" damping="0" armature="0" pos="0 0 0" limited="false"/>
        
